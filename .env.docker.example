# Database (PostgreSQL via docker-compose service)
POSTGRES_USER=yuebot
POSTGRES_PASSWORD=change_me_postgres_password
POSTGRES_DB=yuebot
DATABASE_URL="postgresql://yuebot:change_me_postgres_password@db:5432/yuebot"

# Discord Configuration
DISCORD_TOKEN=discord_bot_token_goes_here
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=123456789012345678
DISCORD_CLIENT_SECRET=discord_oauth_client_secret_goes_here
DISCORD_REDIRECT_URI=https://api.example.com/api/auth/callback

# Disable the bot process for container smoke tests (API + web still run)
ENABLE_BOT=true

# JWT Secret (min 32 characters)
JWT_SECRET=change_me_to_a_long_random_jwt_secret_min_32_chars

# Internal API (API <-> Bot)
INTERNAL_API_SECRET=change_me_to_a_long_random_secret
BOT_INTERNAL_HOST=127.0.0.1
BOT_INTERNAL_PORT=3100
INTERNAL_API_CACHE_TTL_MS=20000
INTERNAL_API_CACHE_MAX_ENTRIES=500

# CORS (separar por vírgula)
# Ex: CORS_ORIGINS=https://seu-front.vercel.app,https://seu-dominio.com
CORS_ORIGINS=https://panel.example.com

# Cookies (para sessão via httpOnly cookie)
# Para frontend em outro domínio: COOKIE_SAMESITE=none e COOKIE_SECURE=true
COOKIE_SAMESITE=none
COOKIE_SECURE=true
COOKIE_DOMAIN=.example.com

# URLs
FRONTEND_URL=https://panel.example.com
WEB_URL=https://panel.example.com
API_URL=https://api.example.com
VITE_API_URL=
VITE_DISCORD_CLIENT_ID=123456789012345678

# Ports (host -> container)
HOST_WEB_PORT=80
HOST_API_PORT=3000
