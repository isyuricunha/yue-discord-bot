{
  "name": "@yuebot/database",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "db:generate": "node scripts/prisma-generate.cjs",
    "db:push": "dotenv -e ../../.env -- prisma db push",
    "db:migrate": "dotenv -e ../../.env -- prisma migrate dev",
    "db:migrate:safe": "node scripts/migrate-safe.cjs",
    "db:studio": "dotenv -e ../../.env -- prisma studio",
    "db:seed": "dotenv -e ../../.env -- tsx prisma/seed.ts",
    "dev": "pnpm db:generate && tsc -b -w",
    "build": "pnpm db:generate && tsc -b --force",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"scripts/**/*.{js,cjs}\"",
    "type-check": "pnpm db:generate && tsc --noEmit"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "pg": "^8.16.3",
    "prisma": "^7.2.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.3",
    "dotenv-cli": "^11.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
