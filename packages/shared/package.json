{
  "name": "@yuebot/shared",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./template_placeholders": {
      "types": "./dist/template_placeholders.d.ts",
      "import": "./dist/esm/template_placeholders.js",
      "require": "./dist/template_placeholders.js",
      "default": "./dist/template_placeholders.js"
    }
  },
  "scripts": {
    "dev": "tsc -b -w",
    "build": "tsc -b --force && tsc -b tsconfig.esm.json --force",
    "clean": "rm -rf dist tsconfig.tsbuildinfo",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "tsc --noEmit",
    "test": "pnpm build && node --test dist"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "typescript": "^5.9.3"
  }
}
