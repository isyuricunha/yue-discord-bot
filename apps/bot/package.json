{
  "name": "@yuebot/bot",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "dev": "pnpm --filter @yuebot/shared build && pnpm --filter @yuebot/database build && tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "deploy-commands": "tsx src/bin/deploy-commands.ts",
    "test": "node --test --import tsx src/**/*.test.ts",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "pnpm --filter @yuebot/shared build && pnpm --filter @yuebot/database build && tsc --noEmit"
  },
  "dependencies": {
    "@napi-rs/canvas": "^0.1.80",
    "@yuebot/database": "workspace:*",
    "@yuebot/shared": "workspace:*",
    "axios": "^1.13.2",
    "crc-32": "^1.2.2",
    "discord.js": "^14.25.1",
    "luxon": "^3.7.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "png-chunk-text": "^1.0.0",
    "png-chunks-encode": "^1.0.0",
    "png-chunks-extract": "^1.0.0",
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
