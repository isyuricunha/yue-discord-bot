{
  "name": "@yuebot/api",
  "version": "1.0.0",
  "private": true,
  "main": "./dist/index.js",
  "scripts": {
    "dev": "pnpm --filter @yuebot/shared build && pnpm --filter @yuebot/database build && tsx watch src/index.ts",
    "build": "tsup",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "type-check": "pnpm --filter @yuebot/shared build && pnpm --filter @yuebot/database db:generate && pnpm --filter @yuebot/database build && tsc --noEmit"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^10.0.0",
    "@yuebot/database": "workspace:*",
    "@yuebot/shared": "workspace:*",
    "axios": "^1.13.2",
    "fastify": "^5.6.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
